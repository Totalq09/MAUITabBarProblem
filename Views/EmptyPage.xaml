<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TabBarProblem.Views.EmptyPage"
             Title="EmptyPage">
    <VerticalStackLayout Padding="20" VerticalOptions="Center" HorizontalOptions="Center">
        <Label
                Text="Click button to change theme"
                FontSize="18"
                HorizontalOptions="Center" />

        <Button
            x:Name="ToggleThemeButton"
            Text="Change theme"
            Command="{Binding ToggleThemeCommand}"
            HorizontalOptions="Center" 
            Margin="20"/>

        <Button
             x:Name="GoToWelcomePageButton"
             Text="Go back to Welcome Page"
             WidthRequest="200"
             Command="{Binding GoToWelcomePageCommand}"
             HorizontalOptions="Center"
             Margin="100"/>
    </VerticalStackLayout>
</ContentPage>